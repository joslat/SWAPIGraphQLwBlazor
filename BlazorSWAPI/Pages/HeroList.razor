<div>
  <ul >
    @if(IsLoading) {
        <h3>Loading Heroes...</h3>
    }
    else if (Heroes?.Nodes is { }) 
    {
        @foreach (var hero in Heroes.Nodes)
        {
            <HeroComponent Hero="@hero" />
        }
    }
  </ul>
</div>

@code {
  
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public ICharacterConnection? Heroes { get; set; }
}